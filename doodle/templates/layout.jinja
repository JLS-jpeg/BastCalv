<!DOCTYPE html>
<html>
<head>
    <link href="../static/css/style.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/b240f5c804.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <div class="wrapper">
        <nav>
            <center><img src="../static/img/logo.png" class="logo-head"></center>
            <ul>
                <li><a href="/">Accueil</a></li>
                {% if session.get('type') == 'eleve' %}
                    <li><a href="rdv">Prendre Rendez-vous</a></li>
                {% elif session.get('type') == 'formateur' %}
                    <li><a href="rdv_pris">Liste RDV</a></li>
                {% endif %}
                <li><a href="contact">Contact</a></li>
                {% if session.get('loggedin') %}
                    <li><a href="logout">Déconnexion</a></li>
                {% else %}
                    <li><a href="loginFormateur">Connexion Formateur</a></li>
                    <li><a href="loginEleve">Connexion Eleve</a></li>
                {% endif %}
            </ul>
        </nav>
        
        <div class="content">
            {% with messages = get_flashed_messages() %}
                {% if messages %}
                    <script>
                        alert("{{ messages[0] }}");
                    </script>
                {% endif %}
            {% endwith %}
            {% block content %}
            {% endblock %}
        </div>
        
        <footer>
            <div class="footer_copy">
                <div class="footer_copyright">
                    <center><p class="copyright">2023 © Copyright FOURNIER & GASTEAU</p></center>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
